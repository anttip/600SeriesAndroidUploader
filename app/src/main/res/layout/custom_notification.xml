<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:layout_centerInParent="true"
    android:padding="5dp" >
    <ImageView
        android:src="@drawable/ic_launcher"
        android:id="@+id/image"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"/>
    <TextView
        android:textSize="28dp"
        android:textColor="#000"
        android:text="8.3"
        android:id="@+id/blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image" />
    <TextView
        android:textSize="28dp"
        android:textColor="#000"
        android:text="--"
        android:id="@+id/bloodtrend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blood" />
    <TextView
        android:textSize="12dp"
        android:textColor="#000"
        android:text="mmol/L"
        android:id="@+id/bloodunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@id/blood"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:textSize="28dp"
        android:textColor="#000"
        android:text="15"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bloodtrend"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:textSize="12dp"
        android:textColor="#000"
        android:text="mins ago"
        android:id="@+id/timeunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@id/time"
        android:layout_toRightOf="@id/bloodunit"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp" />


    <TextView
        android:textSize="28dp"
        android:textColor="#000"
        android:text="0.58U"
        android:id="@+id/iob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:textSize="12dp"
        android:textColor="#000"
        android:text="Active Insulin"
        android:id="@+id/iobunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@id/time"
        android:layout_toRightOf="@id/timeunit"
        android:layout_marginLeft="20dp" />
</RelativeLayout>